<%@page_title= "#{@title}"%>
<%=render :partial => 'contents/stickies'%>
<h1> <%=@title%> 全部文章 </h1>
<div class="articles_list">
  <%=render @articles%>
</div>
<%=will_paginate @articles%>

<%content_for :side do%>
  <%['widgets/article_search','widgets/article_rss', 'widgets/article_orders', 'widgets/article_categories',
    'widgets/article_tags', 'widgets/article_authors', 'widgets/article_prime', 'widgets/friend_links'].each do |widget| %>
    <%=render :partial => widget %>
  <%end%>
<%end%>