<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
  <head>
    <title><%="#{@page_title} - #{Conf.site_name}"%></title>
    <%=render :partial=>'common/seo' %>
    <%= stylesheet_link_tag 'screen', :media => 'screen' %>
    <%= javascript_include_tag :defaults, :cache => true %>
    <%= auto_discovery_link_tag(:rss, articles_url(:format => 'rss')) %>
  </head>
  <body>
    <div class="all">
      <div class="all_y">
        <div class="top">
          <div class="logo">
            <%=link_to image_tag("/images/logo.jpg"), '/'%>
            <span class="version"><%= link_to Conf.version, '/pages/changelog' %> </span>
          </div>
          <%=render :partial => 'common/nav' %>
        </div>
        <div class="main">
          <% flash.each do |key, value| -%>
            <div class="<%= key %>">
              <%= h(value) %>
            </div>
          <% end %>
          <div id="content" class="left">
            <%= yield %>
          </div>
          <div id="side" class="right">
            <%=yield :side%>
          </div>
        </div>

        <%=render :partial=> 'common/bottom' %>
      </div>
    </div>
  </body>
</html>

